{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*"]
    },
    "types": ["node", "electron"]
  },
  "include": [
    "main/**/*.ts",
    "preload/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist-electron"
  ]
}